datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id   String @id @default(uuid())
  text String
}

model User {
  id          String       @id @default(uuid())
  username    String
  email       String
  role        Role         @default(USER)
  password    String
  subscribers Subscriber[]
  mails       Mail[]
}

model Subscriber {
  id       String @id @default(uuid())
  name     String
  email    String
  sender   User   @relation(fields: [senderId], references: [id])
  senderId String
  Mail     Mail[]
}

model Mail {
  id           String     @id @default(uuid())
  sender       User       @relation(fields: [senderId], references: [id])
  senderId     String
  subscriber   Subscriber @relation(fields: [subscriberId], references: [id])
  subscriberId String
  body         String

}

enum Role {
  USER
  ADMIN
}
