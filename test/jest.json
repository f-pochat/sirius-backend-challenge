
{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "roots": [
    "<rootDir>/test"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@mail/(.*)": "<rootDir>/src/mail/$1",
    "@shared/(.*)": "<rootDir>/src/shared/$1",
    "@models/(.*)": "<rootDir>/src/models/$1"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}